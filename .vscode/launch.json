{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'salmon_rs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=salmon_rs",
                    "--package=salmon_rs"
                ],
                "filter": {
                    "name": "salmon_rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "console": "integratedTerminal",
            "sourceLanguages": ["rust"]
        },
        {
            "name": "Debug with rust-analyzer",
            "type": "lldb",
            "request": "launch", 
            "program": "${workspaceFolder}/target/debug/salmon_rs",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "console": "integratedTerminal",
            "sourceLanguages": ["rust"],
            "preLaunchTask": {
                "type": "cargo", 
                "command": "build",
                "args": ["--bin", "salmon_rs"]
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run", 
                    "--bin=salmon_rs",
                    "--package=salmon_rs"
                ],
                "filter": {
                    "name": "salmon_rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "console": "integratedTerminal",
            "sourceLanguages": ["rust"]
        }
    ]
}